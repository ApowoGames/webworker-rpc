{
  "name": "webworker-rpc",
  "version": "0.0.7",
  "main": "release/rpcpeer.js",
  "types": "release/index.d.ts",
  "author": "apowo",
  "license": "MIT",
  "bin": {
    "outside": "bin/outside"
  },
  "scripts": {
    "build:dev": "rm -rf release && webpack && mkdir types/src/lib && cp src/lib/protocols.d.ts types/src/lib/ && yarn dts && rm -rf types",
    "build": "yarn build:dev && yarn version --patch",
    "dts": "dts-bundle --configJson dts-bundle.json",
    "dev": "rm -rf dist && webpack --config ./webpack.dev.config.js  && rm -rf types && webpack-dev-server --config ./webpack.dev.config.js",
    "mkproto:clean": "rimraf ./src/lib/protocols.d.ts ./src/lib/protocols.js",
    "mkproto:tojs": "pbjs -t static-module ./protocol/*.proto -o ./src/lib/protocols.js",
    "mkproto": "yarn mkproto:clean && yarn mkproto:tojs && pbts -o ./src/lib/protocols.d.ts ./src/lib/protocols.js"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/ApowoGames/webworker-rpc"
  },
  "dependencies": {
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.4",
    "dts-bundle": "^0.7.3",
    "dts-dom": "^3.6.0",
    "expose-loader": "^0.7.5",
    "fs-extra": "^9.0.0",
    "jsdoc": "^3.6.4",
    "protobufjs": "^6.10.1",
    "remove": "^0.1.5",
    "ts-loader": "^6.2.1",
    "tslint": "^6.0.0",
    "tslint-webpack-plugin": "^2.1.0",
    "typescript": "^3.7.5",
    "worker-loader": "^2.0.0"
  },
  "devDependencies": {
    "config": "^3.3.1",
    "config-webpack": "^1.0.4",
    "file-loader": "^5.0.2",
    "html-webpack-plugin": "^4.3.0",
    "node-sloc": "^0.1.12",
    "tern": "^0.24.3",
    "terser-webpack-plugin": "^3.0.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0",
    "webpack-shell-plugin": "^0.5.0"
  }
}